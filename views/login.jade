mixin login_form()
  div(class='row')
    div(class=['col', 's6'])
      div(class='container')
        form(name='login', action='/users/login', method='post')
        div(class='row')
          div(class=['input-field'])
            input(type="text", name="username", class="userfield", placeholder='Username')
        div(class='row')
          div(class='input-field')
            input(type="password", class="pass", name="password", placeholder='Password')
        div(class='row')
          div(class='input-field')
            input(type="password", class="pass", name="password2", placeholder='Re-enter password')
        div(class='row')
          button(class=['btn-large', 'waves-effect',
            'waves-light', 'col', 's12'], type='submit', name='action') Create buyer account
            i(class=['material-icons', 'right']) send
