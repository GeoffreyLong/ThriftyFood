//creates a login form with username, password fields that hits /users/submit
mixin create_account_card()
  div.row.vertical-center
    div.col.s12
      div.card
        div.card-content
          form(name='new_seller', action='/users/submit', method='post')
            div.row
              div.input-field
                input(type="text", name="username", id="username", placeholder='Username')
            div.row
              div.input-field
                input(type="password", id="password", name="password", placeholder='Password')
            div.row
              div.input-field
                input(type="password", id="passwordCheck", name="password2", placeholder='Re-enter password')
            div.row
              button.btn-large.waves-effect.waves-light.col.s12.newUserSubmit(id='submit',
                  type='submit', name='submit', disabled = 'true') Create Account
                i.material-icons.right send
