extends nav_layout

block content
  div(class='container')
    div(class=['row', 'vertical-center'])

      div(class=['col', 's6'])
        div(class='card')
          div(class='card-content')
            div(class='container')
              form(name='usersubmit', action='/users/submit', method='post')
                div(class='row')
                  div(class=['input-field'])
                    input(type="text", name="username", id="username", placeholder='Username')
                div(class='row')
                  div(class='input-field')
                    input(type="password", id="password", name="password", placeholder='Password')
                div(class='row')
                  div(class='input-field')
                    input(type="password", id="passwordCheck", name="password2", placeholder='Re-enter password')
                div(class='row')
                  div(class='switch')
                    label Seller
                      input(type='checkbox', name='isSeller', value='isSeller')
                      span(class='lever')
                div(class='row')
                  button(class=['btn-large', 'waves-effect',
                    'waves-light', 'col', 's12', 'newUserSubmit'], id = 'submit', type='submit', name='submit', disabled = 'true') Create Account
                    i(class=['material-icons', 'right']) send
