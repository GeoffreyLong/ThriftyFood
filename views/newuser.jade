extends nav_layout

block content
  div(class='container')
    div(class=['row', 'vertical-center'])

      div(class=['col', 's6'])
        div(class='card')
          div(class='card-content')
            div(class='container')
              form(name='usersubmit', action='/users/submit', method='post')
                div(class='row')
                  div(class=['input-field'])
                    input(type="text", name="username", id="buyerUserField", placeholder='Username')
                div(class='row')
                  div(class='input-field')
                    input(type="password", id="buyerPass", name="password", placeholder='Password')
                div(class='row')
                  div(class='input-field')
                    input(type="password", id="buyerPassCheck", name="password2", placeholder='Re-enter password')
                div(class='row')
                  button(class=['btn-large', 'waves-effect',
                    'waves-light', 'col', 's12', 'newUserSubmit'], id = 'buyerSubmit', type='submit', name='usersubmit', disabled = 'true') Create buyer account
                    i(class=['material-icons', 'right']) send

      div(class=['col', 's6'])
        div(class='card')
          div(class='card-content')
            div(class='container')
              form(name='sellersubmit', action='/users/submit', method='post')
                div(class='row')
                  div(class=['input-field'])
                    input(type="text", name="username", class="seller", id="sellerUserField", placeholder='Username')
                div(class='row')
                  div(class='input-field')
                    input(type="password", class="seller", id="sellerPass", name="password", placeholder='Password')
                div(class='row')
                  div(class='input-field')
                    input(type="password", class="seller", id="sellerPassCheck", name="password2", placeholder='Re-enter password')
                div(class='row')
                  button(class=['btn-large', 'waves-effect',
                    'waves-light', 'col', 's12', 'newUserSubmit'], id='sellerSubmit', type='submit', name='sellersubmit', disabled = 'true') Create seller account
                    i(class=['material-icons', 'right']) send

